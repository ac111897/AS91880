@page
@using AS91880.Services;
@inject IContentService _service; // use dependency injection to provide privacy policy from txt files.
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Title display -->
<div class="text-center;">
    <h1 class="display-3 text-center">@ViewData["Title"]</h1>
</div>
<h2 class="text-center thead-dark">Relevant Implications</h2>
@{ 
    foreach (var element in _service.GetContent("privacy-path")) // get all relevant implications
    {
        <p class="text-center">
            @element
        </p>
    }
    <p class="text-center">A site map is included at <a href="~/sitemap.txt">~/sitemap.txt</a></p> // sitemap reference
}
<h2 class="text-center thead-dark">Resources used</h2>
@{
    <ul class="align-content-center">
        @{
            foreach (var element in _service.GetContent("links")) // add list item for all links with hyperlink
            {
                <li>
                <a href=@element target="_blank">@element</a>
                </li>
            }
        }
    </ul>
}